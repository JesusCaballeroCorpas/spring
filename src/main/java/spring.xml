<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="oferta3x2" class="es.uma.informatica.spring1.Oferta3x2" />
	<bean id="descuento20porciento" class="es.uma.informatica.spring1.Descuento20Porciento">
		<constructor-arg value="Queso" type="java.lang.String" />
	</bean>
	<bean id="calculadorOfertas" class="es.uma.informatica.spring1.CalculadorOfertas">
		<constructor-arg>
			<list>
				<ref bean="oferta3x2" />
				<ref bean="descuento20porciento" />
			</list>
		</constructor-arg>
	</bean>
	
	<bean id="leche" class="es.uma.informatica.spring1.domain.Producto" >
		<property name="nombre" value="Leche" />
		<property name="precio" value="1.50" />
	</bean>
	<bean id="queso" class="es.uma.informatica.spring1.domain.Producto" >
		<property name="nombre" value="Queso" />
		<property name="precio" value="3.40" />
	</bean>
	<bean id="atun" class="es.uma.informatica.spring1.domain.Producto" >
		<property name="nombre" value="AtÃºn" />
		<property name="precio" value="3.00" />
	</bean>
	<bean id="linea1" class="es.uma.informatica.spring1.domain.LineaFactura">
		<property name="producto" ref="leche" />
		<property name="cantidad" value="6" />
	</bean>
	<bean id="linea2" class="es.uma.informatica.spring1.domain.LineaFactura">
		<property name="producto" ref="queso" />
		<property name="cantidad" value="2" />
	</bean>
	<bean id="linea3" class="es.uma.informatica.spring1.domain.LineaFactura">
		<property name="producto" ref="atun" />
		<property name="cantidad" value="6" />
	</bean>
	<bean id="factura" class="es.uma.informatica.spring1.domain.Factura" >
		<property name="lineas">
			<list>
				<ref bean="linea1" />
				<ref bean="linea2" />
				<ref bean="linea3" />
			</list>
		</property>
	</bean>
</beans>
